<div>
<div class="view">
    <input type="checkbox" class="toggle" {{#if done}}checked="checked"{{/if}} />

    <label>{{title}}{{^if title}}untitled{{/if}}</label>
    <!--<span>create time: <time>{{prettyDate create_time}}</time></span>-->
    <!--<span>update time: <time>{{prettyDate update_time}}</time></span>-->
    <div>
        {{content}}
    </div>
    <a class="destroy"><img src="img/icons/delete.png"/></a>
</div>
<div class="edit">
    <input class="edit"  type="text" value="{{title}}" placeholder="title">
    <textarea class="edit" placeholder="TODO...">{{content}}</textarea>
    <div>
        <button class="cancel btn">cancel</button>
        <button class="save btn">save</button>
    </div>
</div>
</div>
